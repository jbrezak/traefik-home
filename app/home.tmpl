    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
            background: #f5f5f5;
            padding: 2rem;
        }

        /* Dark mode support */
        @media (prefers-color-scheme: dark) {
            body {
                background: #1a1a1a;
                color: #e0e0e0;
            }
            
            h1 {
                color: #ffffff !important;
            }
            
            .service-card {
                background: #2d2d2d;
                color: #e0e0e0;
            }
            
            .service-name {
                color: #ffffff;
            }
            
            .service-url {
                color: #b0b0b0;
            }
            
            .service-url:hover {
                color: #64b5f6;
            }
            
            .dropdown-menu {
                background: #2d2d2d;
                border: 1px solid #404040;
            }
            
            .dropdown-header {
                border-bottom-color: #404040;
            }
            
            .dropdown-username {
                color: #ffffff;
            }
            
            .dropdown-item {
                color: #b0b0b0;
            }
            
