    <style>
        body.custom-background::before {
            content: '';
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-image: url('{{$.Env.CUSTOM_BACKGROUND_URL}}');
            background-size: cover;
