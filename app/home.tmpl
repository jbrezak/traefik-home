        // Fetch user info from the API endpoint
        async function fetchUserInfo() {
            try {
                const response = await fetch('/api/user-info', {
                    credentials: 'include'
                });
                
                if (!response.ok) {
                    return null;
                }
                
                const data = await response.json();
                
                // Check if username exists and is not empty
                if (data.username && data.username !== '' && data.username !== '$http_x_authentik_username') {
                    return {
                        username: data.username,
                        email: data.email,
                        isAdmin: data.isAdmin === 'true'
                    };
                }
                
                return null;
            } catch (error) {
                console.error('Failed to fetch user info:', error);
                return null;
            }
        }

        // Extract initials from full name
        function getInitials(name) {
            const parts = name.trim().split(/\s+/);
            if (parts.length === 1) {
                return parts[0].substring(0, 2).toUpperCase();
            }
            return (parts[0][0] + parts[parts.length - 1][0]).toUpperCase();
        }
        
        // Load Gravatar for email
        function loadGravatar(email, onSuccess, onError) {
            if (!email || email === '' || email === '$http_x_authentik_email') {
                onError();
                return;
            }
            
            // Generate Gravatar URL
            const emailHash = md5(email.trim().toLowerCase());
            const gravatarUrl = `https://www.gravatar.com/avatar/${emailHash}?s=96&d=404`;
            
            // Try to load the image
            const img = new Image();
            img.onload = function() {
                onSuccess(gravatarUrl);
            };
            img.onerror = function() {
                onError();
            };
            img.src = gravatarUrl;
        }

        // Initialize user menu with username
        function initializeUserMenu(userInfo) {
            if (!userInfo || !userInfo.username) return;
            
            // Show user menu container
            const userMenuContainer = document.getElementById('userMenuContainer');
            userMenuContainer.classList.add('active');

            // Set full name in dropdown
            document.getElementById('fullUsername').textContent = userInfo.username;
            
            const userButton = document.getElementById('userButton');
            const userInitials = document.getElementById('userInitials');
            
            // Try to load Gravatar
            loadGravatar(userInfo.email, 
                function(gravatarUrl) {
                    // Gravatar found - show image
                    userButton.style.backgroundImage = `url('${gravatarUrl}')`;
                    userButton.style.backgroundSize = 'cover';
                    userButton.style.backgroundPosition = 'center';
                    userInitials.style.display = 'none';
                },
                function() {
                    // No Gravatar - show initials
                    userInitials.textContent = getInitials(userInfo.username);
                    userInitials.style.display = 'block';
                }
            );

            // Toggle dropdown menu
            const dropdownMenu = document.getElementById('dropdownMenu');
            const dropdownOverlay = document.getElementById('dropdownOverlay');
            
            userButton.addEventListener('click', (e) => {
                e.stopPropagation();
                dropdownMenu.classList.toggle('show');
                dropdownOverlay.classList.toggle('show');
            });

            // Close dropdown when clicking overlay
            dropdownOverlay.addEventListener('click', () => {
                dropdownMenu.classList.remove('show');
                dropdownOverlay.classList.remove('show');
            });

            // Logout functionality
            const logoutButton = document.getElementById('logoutButton');
            logoutButton.addEventListener('click', async () => {
                if (logoutUrl) {
                    // Navigate to logout URL (will clear session and redirect)
                    window.location.href = logoutUrl;
                } else {
                    // No logout URL configured, just reload
                    window.location.reload();
                }
            });
            
            // Show admin section if user is admin
            if (userInfo.isAdmin) {
                const adminSection = document.getElementById('adminSection');
                adminSection.style.display = 'block';
                
                // Setup admin section toggle
                const adminHeader = document.getElementById('adminHeader');
                const adminContent = document.getElementById('adminContent');
                const adminToggle = document.getElementById('adminToggle');
                
                adminHeader.addEventListener('click', () => {
                    adminContent.classList.toggle('expanded');
                    adminToggle.classList.toggle('expanded');
                });
            }
        }

        // Initialize on page load
        document.addEventListener('DOMContentLoaded', async () => {
            const userInfo = await fetchUserInfo();
            if (userInfo) {
                initializeUserMenu(userInfo);
                
                // Render external apps if available
                if (externalApps && externalApps.length > 0) {
                    renderExternalApps(userInfo.isAdmin);
                }
            } else {
                // Still render external apps even if not authenticated
                if (externalApps && externalApps.length > 0) {
                    renderExternalApps(false);
                }
            }
        });
        
        // Render external apps from Traefik dynamic config
        function renderExternalApps(isAdmin) {
            const servicesGrid = document.getElementById('mainServicesGrid');
            const adminServicesGrid = document.getElementById('adminServicesGrid');
            
            externalApps.forEach(app => {
                // Skip if disabled
                if (app.Enable === 'false') return;
                
                // Check if admin-only app
                const isAdminApp = app.Admin === 'true';
                
                // Skip admin apps for non-admin users
                if (isAdminApp && !isAdmin) return;
                
                // Determine target grid
                const targetGrid = isAdminApp ? adminServicesGrid : servicesGrid;
                if (!targetGrid) return;
                
                const showStatusDot = {{ $show_status_dot }};
                const openInNewTab = {{ $link_in_new_tab }};
                
                const card = document.createElement('a');
                card.href = app.URL;
                if (openInNewTab) {
                    card.target = '_blank';
                    card.rel = 'noopener noreferrer';
                }
                
                const displayName = app.Alias || app.Name;
                
                card.innerHTML = `
                    <div class="service-card">
                        ${app.Icon ? `<img src="${app.Icon}" alt="${displayName}" class="service-icon">` : ''}
                        <div class="service-info">
                            ${showStatusDot ? '<div class="status-dot status-online"></div>' : ''}
                            <div class="service-name">${displayName}</div>
                            <div class="service-url">${app.URL}</div>
                        </div>
                    </div>
                `;
                
                targetGrid.appendChild(card);
            });
        }
